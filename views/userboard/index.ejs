<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>

 <body>
  <h2><%= title %></h2>
   <% allCards.forEach((card) => { %>
    <div class='card'>
       <p><%= card.legislator %></p> 
       <p><%= card.role %></p> 
       <p><%= card.party %></p> 
       <p>@<%= card.twitter %></p> 
       <% if (card.analysis) { %>
        <p>  <%= card.analysis %> </p>
          <% } %>
      
       
       <form action="/userboard/edit/<%=card._id%>">
           <button>edit</button>
        </form>
       <form action="/userboard/<%=card._id%>?_method=DELETE" method="POST"><button>delete</button></form>

    </div>
   <% }) %>
 </body>
</html>